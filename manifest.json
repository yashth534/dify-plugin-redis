{
  "version": "1.0.3",
  "type": "plugin",
  "author": "eft",
  "name": "redis",
  "title": {
    "en_US": "Redis",
    "ja_JP": "Redis",
    "zh_Hans": "Redis",
    "pt_BR": "Redis"
  },
  "description": {
    "en_US": "Redis tools plugin for Dify, provide Redis SET and GET functions, Redis Cluster mode is supported too.",
    "ja_JP": "Redis tools plugin for Dify, provide Redis SET and GET functions, Redis Cluster mode is supported too.",
    "zh_Hans": "适用于 Dify 的 Redis 工具插件，提供 Redis SET 与 GET 功能，同时支持 Redis 单节点与集群模式。",
    "pt_BR": "Redis tools plugin for Dify, provide Redis SET and GET functions, Redis Cluster mode is supported too."
  },
  "icon": "icon.svg",
  "main": "main.py",
  "resource": {
    "memory": 268435456,
    "permission": {
      "tool": { "enabled": true },
      "endpoint": { "enabled": true },
      "app": { "enabled": true },
      "storage": { "enabled": true, "size": 1048576 }
    }
  },
  "meta": {
    "version": "1.0.3",
    "arch": ["amd64", "arm64"],
    "runner": {
      "language": "python",
      "version": "3.12",
      "entrypoint": "main"
    }
  },
  "plugins": {
    "tools": ["provider/redis-provider.yaml"]
  },
  "credentials": {
    "host": {
      "type": "text-input",
      "required": false,
      "label": { "en_US": "Host", "zh_Hans": "Host" },
      "placeholder": { "en_US": "default: 127.0.0.1", "zh_Hans": "默认: 127.0.0.1" }
    },
    "port": {
      "type": "text-input",
      "required": false,
      "label": { "en_US": "Port", "zh_Hans": "Port" },
      "placeholder": { "en_US": "default: 6379", "zh_Hans": "默认: 6379" }
    },
    "password": {
      "type": "secret-input",
      "required": false,
      "label": { "en_US": "Password", "zh_Hans": "Password" },
      "placeholder": { "en_US": "default: None", "zh_Hans": "默认: None" }
    },
    "username": {
      "type": "text-input",
      "required": false,
      "label": { "en_US": "Username", "zh_Hans": "Username" },
      "placeholder": {
        "en_US": "default: None (e.g. \"default\" for DigitalOcean Managed Valkey)",
        "zh_Hans": "默认: None (例如 DigitalOcean 托管 Valkey 使用 \"default\")"
      }
    },
    "use_ssl": {
      "type": "select",
      "required": false,
      "default": "none",
      "label": { "en_US": "SSL/TLS", "zh_Hans": "SSL/TLS" },
      "placeholder": { "en_US": "default: None", "zh_Hans": "默认: 无" },
      "options": [
        { "value": "none", "label": { "en_US": "None", "zh_Hans": "无" } },
        { "value": "ssl-tls", "label": { "en_US": "SSL/TLS", "zh_Hans": "SSL/TLS" } }
      ]
    },
    "cluster": {
      "type": "boolean",
      "required": false,
      "label": { "en_US": "Cluster", "zh_Hans": "是否集群" },
      "placeholder": { "en_US": "default: false", "zh_Hans": "默认: false" }
    },
    "db": {
      "type": "text-input",
      "required": false,
      "label": { "en_US": "DB", "zh_Hans": "DB" },
      "placeholder": {
        "en_US": "default: 0 (Not supported in cluster mode)",
        "zh_Hans": "默认: 0 (集群模式下不生效)"
      }
    }
  },
  "functions": [
    {
      "name": "redis-set",
      "author": "eft",
      "label": { "en_US": "Redis SET", "zh_Hans": "Redis SET", "pt_BR": "Redis SET" },
      "description": {
        "human": { "en_US": "Redis SET", "zh_Hans": "Redis SET", "pt_BR": "Redis SET" },
        "llm": "Redis SET"
      },
      "source": "tools/redis-set.py",
      "input_schema": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Redis Name",
            "required": true,
            "form": "llm"
          },
          "key": {
            "type": "string",
            "description": "Redis Key",
            "required": true,
            "form": "llm"
          },
          "value": {
            "type": "string",
            "description": "Redis Value",
            "required": true,
            "form": "llm"
          },
          "ttl": {
            "type": "number",
            "description": "TTL in seconds, default 60s",
            "required": false,
            "form": "llm"
          }
        },
        "required": ["name", "key", "value"]
      },
      "output_schema": {
        "type": "object",
        "properties": {
          "result": {
            "type": "string",
            "description": "The value that was set"
          }
        }
      }
    },
    {
      "name": "redis-get",
      "author": "eft",
      "label": { "en_US": "Redis GET", "zh_Hans": "Redis GET", "pt_BR": "Redis GET" },
      "description": {
        "human": { "en_US": "Redis GET", "zh_Hans": "Redis GET", "pt_BR": "Redis GET" },
        "llm": "Redis GET"
      },
      "source": "tools/redis-get.py",
      "input_schema": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Redis Name",
            "required": true,
            "form": "llm"
          },
          "key": {
            "type": "string",
            "description": "Redis Key",
            "required": true,
            "form": "llm"
          }
        },
        "required": ["name", "key"]
      },
      "output_schema": {
        "type": "object",
        "properties": {
          "result": {
            "type": "string",
            "description": "The value stored at the given key, or empty string if not found"
          }
        }
      }
    }
  ],
  "privacy": "PRIVACY.md",
  "verified": false,
  "created_at": "2025-04-03T00:22:00.7619378+08:00"
}
